<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/button_R"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="changeSiteOfReference" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/profile_management"
        android:id="@+id/textViewGP"
        android:layout_marginStart="45dp"
        android:layout_alignTop="@+id/button_R"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sites"
        android:id="@+id/textViewSites"
        android:layout_below="@+id/button_R"
        android:layout_alignStart="@+id/textViewGP"
        android:layout_marginStart="41dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listSites"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        android:layout_below="@+id/textViewSites"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@+id/button_R"
        android:layout_alignStart="@+id/textViewGP" />

</RelativeLayout>